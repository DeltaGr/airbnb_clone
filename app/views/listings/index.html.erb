<div class="container-fluid mt-5">
  <div class="listings-wrapper">
    <div class="d-flex">
      <% @listings.each do |listing| %>
        <div class="listing-col">
          <%= link_to listing_path(listing), class: "text-decoration-none text-dark" do %>
            <div class="listing-card card border-0 h-100">

              <!-- Bild + Badge + Herz -->
              <div class="position-relative">
                <%= image_tag "https://images.unsplash.com/photo-1583847268964-b28dc8f51f92?q=80&w=387&auto=format&fit=crop&ixlib=rb-4.1.0", class: "card-img-top", alt: listing.title %>

                <!-- Gäste-Favorit Badge links oben -->
                <span class="badge bg-success position-absolute top-0 start-0 m-2">
                  Gäste-Favorit
                </span>

                <!-- Herz rechts oben -->
                <button class="heart-btn position-absolute top-0 end-0 m-2">
                  <i class="bi bi-heart"></i>
                </button>
              </div>

              <!-- Card Body -->
              <div class="card-body p-3">
                <!-- Unterkunftsart, Ort, Privat -->
                <p class="text-muted mb-1">
                  <%= listing.room_type || "Unterkunft" %> · <%= listing.location || "Ort" %> · Privat
                </p>

                <!-- Gewünschtes Reisedatum -->
                <p class="text-muted mb-2">
                  <%= listing.dates || "gewähltes Datum" %>
                </p>

                <!-- Preis & Rating -->
                <div class="d-flex justify-content-between align-items-center">
                  <p class="fw-bold mb-0">
                    €<%= listing.price || 100 %> / Nacht
                  </p>
                  <div class="d-flex align-items-center">
                    <span class="text-warning me-1">★</span>
                    <small class="text-muted"><%= listing.rating || 4.8 %></small>
                  </div>
                </div>

              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
